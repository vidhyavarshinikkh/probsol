import java.util.Arrays;
import java.util.Scanner;

public class RunningSumExample {

    // Method to calculate running sum
    public static int[] runningSum(int[] nums) {
        int n = nums.length;
        int[] ans = new int[n];
        ans[0] = nums[0]; // first element same as input
        
        for (int i = 1; i < n; i++) {
            ans[i] = ans[i - 1] + nums[i]; // running sum formula
        }
        
        return ans;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Ask for array size
        System.out.print("Enter the size of the array: ");
        int n = sc.nextInt();

        int[] nums = new int[n];

        // Read array elements
        System.out.println("Enter " + n + " integers:");
        for (int i = 0; i < n; i++) {
            nums[i] = sc.nextInt();
        }

        // Compute running sum
        int[] result = runningSum(nums);

        // Print result
        System.out.println("Running sum: " + Arrays.toString(result));

        sc.close();
    }
}
/**nums =
[3,1,2,10,1]
Output
[3,4,6,16,17]*/
